<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>NOTES APP</title>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full" type="text" placeholder="Title goes here..."
                    name="title" required>
                <textarea class="block mt-2 px-5 py-2 resize-none bg-zinc-800 w-full" name="details"
                    placeholder="Write your task details here..." required></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create-task">

            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (files.length> 0) { %>
                <% files.forEach(function(file) { %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tight">
                            <%= file %>
                        </h1>
                        <a href="/file/<%= file %>" class="text-blue-500 inline-block mt-3">Read More</a>
                        <form action="/delete/<%= file %>" method="POST"
                            onsubmit="return confirm('Are you sure you want to delete this file?');">
                            <button type="submit" class="text-red-500 inline-block mt-3">Delete</button>
                        </form>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3 class="text-zinc-600">No tasks here yet...</h3>
                            <% } %>
        </div>
    </div>
</body>

</html>